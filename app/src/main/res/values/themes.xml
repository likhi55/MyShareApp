<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyShare" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/md_teal_500</item>
        <item name="colorPrimaryVariant">@color/md_teal_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/md_lime_300</item>
        <item name="colorSecondaryVariant">@color/md_lime_500</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:textColorSecondary">@color/md_grey_600</item>
        <item name="icon">@color/md_white_1000</item>
        <item name="android:windowBackground">@color/md_teal_100</item>
        <item name="cardBackgroundColor">@color/white</item>

    </style>

    <style name="Theme.MyShare.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MyShare.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MyShare.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>